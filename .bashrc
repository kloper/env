################ Set Prompt ######################
PS1="\h \w>"

################ History #########################
HISTSIZE=100
HISTFILE=~/.bashhist
HISTFILESIZE=100
command_oriented_history=1

################ Environment #####################
export PATH=$PATH:/usr/local/bin:/usr/X11R6/bin
export EDITOR=vim

################ Aliases #########################
alias ls="ls --color -aCF"

